{
  "name": "wallet-ops-arbitrum",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace apps/api run dev & npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",

    "build:core": "npm --workspace packages/core run build",
    "build:api": "npm --workspace apps/api run build",
    "build:web": "npm --workspace apps/web run build",
    "build": "npm run build:core && npm run build:api && npm run build:web",

    "test": "npm --workspaces run test",
    "lint": "npm --workspaces run lint"
  },
  "devDependencies": {
    "typescript": "^5.6.3"
  }
}
